{
    "include": [
        "src/**/*.ts"
    ],
    "compilerOptions": {
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "allowJs": true,
        "sourceMap": true,
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}